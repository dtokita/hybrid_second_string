<ons-page>
  <form>
    <div class="form-group" style="margin: 10px;">
      <label for="season-name">Season Name</label>
      <input type="text" class="form-control" id="season-name" placeholder="Summer 2018">
    </div>

    <div class="row" style="margin: 0px;">
      <div class="col">
        <div class="form-group">
          <label for="start-date">Start Date</label>
          <input type="date" class="form-control" id="start-date">
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <label for="end-date">End Date</label>
          <input type="date" class="form-control" id="end-date">
        </div>
      </div>
    </div>
 
    <div class="form-group" style="margin: 10px;">
      <label for="players">Players</label>
      <select class="form-control" id="players" multiple>
        <% Player.order(:name).each do |player| %>
          <option value="<%= player.id %>"><%= player.name %></option>
        <% end %>
      </select>
    </div>

    <div style="margin: 10px">
      <ons-button modifier="large" onclick="create_season()">Create Season</ons-button>
    </div>

    <div class="alert alert-success" style="margin: 10px; display: none" id="season_success">
      <strong>Success!</strong> Season created.
    </div>

    <div class="alert alert-danger" style="margin: 10px; display: none" id="season_failed">
      <strong>Failed!</strong> Season was not created.
    </div>
  </form>
</ons-page>
