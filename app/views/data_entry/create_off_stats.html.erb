<ons-page>
  <form>
    <div class="form-group" style="margin: 10px;">
      <label for="off-player">Player</label>
      <select class="form-control" id="off-player">
        <% Player.order(:name).each do |player| %>
          <option value="<%= player.id %>"><%= player.name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="off-season">Season</label>
      <select class="form-control" id="off-season">
        <% Season.order(:id).each do |season| %>
          <option value="<%= season.id %>"><%= season.name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="off-game">Game</label>
      <select class="form-control" id="off-game">
        <% Game.order(:id).each do |game| %>
          <option value="<%= game.id %>"><%= game.away_name + " @ " + game.home_name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="plate-appearances">PAs</label>
      <input type="number" class="form-control" id="plate-appearances">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="at-bats">ABs</label>
      <input type="number" class="form-control" id="at-bats">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="runs">Runs</label>
      <input type="number" class="form-control" id="runs">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="hits">Hits</label>
      <input type="number" class="form-control" id="hits">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="singles">1Bs</label>
      <input type="number" class="form-control" id="singles">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="doubles">2Bs</label>
      <input type="number" class="form-control" id="doubles">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="triples">3Bs</label>
      <input type="number" class="form-control" id="triples">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="homeruns">HRs</label>
      <input type="number" class="form-control" id="homeruns">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="rbis">RBIs</label>
      <input type="number" class="form-control" id="rbis">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="walks">BBs</label>
      <input type="number" class="form-control" id="walks">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="hit-by-pitches">HBPs</label>
      <input type="number" class="form-control" id="hit-by-pitches">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="strikeouts">Ks</label>
      <input type="number" class="form-control" id="strikeouts">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="stolen_bases">SBs</label>
      <input type="number" class="form-control" id="stolen_bases">
    </div>

    <div class="form-group" style="margin: 10px;">
      <label for="caught_stealings">CSs</label>
      <input type="number" class="form-control" id="caught_stealings">
    </div>

    <div style="margin: 10px">
      <ons-button modifier="large" onclick="create_off_stat()">Create Off Statline</ons-button>
    </div>

    <div class="alert alert-success" style="margin: 10px; display: none" id="off_stat_success">
      <strong>Success!</strong> Off Stat created.
    </div>

    <div class="alert alert-danger" style="margin: 10px; display: none" id="off_stat_failed">
      <strong>Failed!</strong> Off Stat was not created.
    </div>
  </form>
</ons-page>
